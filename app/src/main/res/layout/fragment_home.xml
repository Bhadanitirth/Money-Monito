<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_margin="8dp" />

    <TextView
        android:id="@+id/hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:text="null"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginStart="8dp" />

    <ImageView
        android:id="@+id/profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_margin="16dp"
        android:src="@drawable/other"
        android:layout_alignParentEnd="true" />

            <!-- "This month" TextView -->
            <RelativeLayout
                android:id="@+id/this_month"
                android:layout_below="@+id/hello"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This month"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_margin="8dp" />

                <!-- Search Icon -->
                <ImageView
                    android:id="@+id/searchIcon"
                    android:layout_alignParentEnd="true"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/search"/>

            </RelativeLayout>

            <!-- Spending and Income Section -->
            <RelativeLayout
                android:id="@+id/spending_income"
                android:layout_below="@+id/this_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_margin="16dp">

                <!-- Spending Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/spending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    card_view:cardCornerRadius="30dp"
                    card_view:cardElevation="10dp"
                    android:background="@drawable/edit_text_background"
                    app:cardBackgroundColor="@color/green">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/img_inc"
                            android:layout_width="40dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/inc"/>
                        <TextView
                            android:id="@+id/spendingText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Spending"
                            android:layout_toEndOf="@id/img_inc"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/spendingAmount"
                            android:layout_below="@+id/spendingText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:layout_toEndOf="@id/img_inc"
                            android:text="text"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Income Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/income"
                    android:layout_toEndOf="@+id/spending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    card_view:cardCornerRadius="30dp"
                    card_view:cardElevation="10dp"
                    android:background="@drawable/edit_text_background"
                    app:cardBackgroundColor="@color/red">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/img_dec"
                            android:layout_width="40dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/dec"/>
                        <TextView
                            android:id="@+id/incomeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Income  "
                            android:layout_toEndOf="@id/img_dec"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/incomeAmount"
                            android:layout_below="@+id/incomeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="text"
                            android:layout_toEndOf="@id/img_dec"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:layout_marginTop="5dp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/balanceTextcard"
        android:layout_below="@+id/spending_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="30dp"
        card_view:cardElevation="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edit_text_background"
        app:cardBackgroundColor="@color/white">
            <!-- Balance Text -->

            <TextView
                android:id="@+id/balanceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="text"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_margin="10dp"/>

    </androidx.cardview.widget.CardView>

            <!-- Recent Transactions Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/recent_Transactions"
                android:layout_below="@+id/balanceTextcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                card_view:cardCornerRadius="30dp"
                card_view:cardElevation="10dp"
                android:background="@drawable/edit_text_background">

                <RelativeLayout
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/recentTransactionsTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recent transactions"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/seeAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See all"
                        android:textSize="20dp"
                        android:layout_alignParentEnd="true"
                        android:gravity="end" />

                    <ListView
                        android:id="@+id/user_list"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/recentTransactionsTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

</RelativeLayout>

